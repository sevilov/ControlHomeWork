<Page x:Class="ControlHomeWork.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControlHomeWork"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RegPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBox Name="TextBoxRegLogin" Height="30" Width="200" HorizontalAlignment="Left" Margin="20"></TextBox>
        <PasswordBox Name="PasswordBoxRegPassword" Height="30" Width="200" HorizontalAlignment="Left" Margin="20" Grid.Row="1"></PasswordBox>
        <Button Height="30" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Grid.Row="2" FontSize="20" Click="ButtonReg_Click">Register</Button>

    </Grid>
</Page>
